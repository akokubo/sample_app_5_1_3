<%# @userが存在しなければ(static_pages#homeの場合)、current_userを代入 -%>
<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= User.human_attribute_name('following') %>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= User.human_attribute_name('follower') %>
  </a>
</div>
