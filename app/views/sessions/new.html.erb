<% provide(:title, t('.log_in')) %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%# fprm_forの引数にリソース名(input要素のname属性の先頭)とurlを指定 -%>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, User.human_attribute_name('email') %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, User.human_attribute_name('password') %>
      <%= link_to t('.forgot_password'), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <!-- チェックボックスをインライン形状にするlabel要素で
           checkbox型のinput要素を包む -->
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('.remember_me_on_this_computer') %></span>
      <% end %>

      <%= f.submit t('.log_in'), class: "btn btn-primary" %>
    <% end %>

    <p><%= t('.new_user') %><%= link_to t('.sign_up_now'), signup_path %></p>
  </div>
</div>
